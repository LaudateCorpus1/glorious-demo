@require '_variables'
@require '_mixins'
@require 'application'

.desktop
  position relative
  .application
    position absolute
    top 0
    left 0
    right 0
    opacity 0
    &:not(.application-inanimate)
      transform('scale(0)')
      transition(all, $animation-duration)
      box-shadow 2px 3px 8px 0 $application-box-shadow-color
    &.application-maximized
      opacity 1
      box-shadow $application-box-shadow-intensity $application-box-shadow-color
      transform('scale(1)')
